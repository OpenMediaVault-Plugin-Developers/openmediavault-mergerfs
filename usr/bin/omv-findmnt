export LANG=C.UTF-8

mnts=""

if [ -n "${1}" ]; then
  for dir in ${1}; do
    if [ "${dir}" = ".." ] || [ "${dir}" = "." ]; then
      continue
    fi
    if [ "$(basename "${dir}")" = "lost+found" ]; then
      continue
    fi
    if [ -d "${dir}" ]; then
      mnt="$(findmnt --first-only --noheadings --output TARGET --target "${dir}")"
      if [ -z "${mnt}" ] || [ "${mnt}" = "/" ]; then
        continue
      fi
      if [ -z "${mnts}" ]; then
        mnts="${mnt}"
      else
        mnts="${mnts} ${mnt}"
      fi
    fi
  done
fi

echo "${mnts}"
